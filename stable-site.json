{
  "baseUrl": "",
  "timeZone": "Asia/Singapore",
  "titlePrefix": "",
  "titleSuffix": "",
  "style": {
    "codeTheme": "light"
  },
  "ignore": [
    "_markbind/layouts/*",
    "_markbind/logs/*",
    "_site/*",
    "site.json",
    "*.md",
    "*.njk",
    ".git/*",
    ".gitignore",
    "node_modules/*"
  ],
  "pagesExclude": ["node_modules/*"],
  "pages": [
    {
      "src": "index.md"
    },
    {
      "glob": ["**/index.md", "**/*.md"]
    }
  ],
  "plugins": [
    "customviews",
    "filterTags",
    "codeBlockCopyButtons",
    "codeBlockWrapButtons",
    "mermaid"
  ],
  "deploy": {
    "message": "Update main site.",
    "repo": "https://github.com/custardUI/custardUI.github.io.git",
    "branch": "master"
  }
}
